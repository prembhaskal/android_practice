<resources>

    <!-- Base application theme. -->
    <style name="AppThemeX" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <!--<item name="android:color">@android:color/holo_blue_light</item>-->
        <!--<item name="android:actionBarItemBackground">@android:color/holo_blue_light</item>-->
        <item name="colorPrimary">@android:color/background_dark</item>
        <item name="android:textColorPrimary">@android:color/holo_red_light</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">#3F51B5</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">#303F9F</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">#FF4081</item>
    </style>

    <style name="CustomNoTitle" parent="Theme.AppCompat">
        <item name="colorPrimary">@android:color/background_dark</item>
        <item name="android:textColorPrimary">@android:color/holo_red_light</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabPaddingStart">2dp</item>
        <item name="tabPaddingEnd">2dp</item>
        <item name="tabBackground">@drawable/tab_selector_drawable</item>
    </style>

</resources>
