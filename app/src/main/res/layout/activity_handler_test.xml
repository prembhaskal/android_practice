<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bhaskal.myapplication.HandlerTestActivity">

    <Button
        android:id="@+id/startBgTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="143dp"
        android:onClick="onStartTaskClick"
        android:text="Start BG Task" />

    <TextView
        android:id="@+id/dataFromBackend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/startBgTask"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="68dp"
        android:layout_toEndOf="@+id/startBgTask"
        android:text="Background Data" />
</RelativeLayout>
