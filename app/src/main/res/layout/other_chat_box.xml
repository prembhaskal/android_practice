<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:paddingLeft="25dp"
        android:paddingTop="5dp"
        android:text="Player Name"
        android:textSize="5sp"
        android:textColor="@color/black"
        android:id="@+id/playerNameInChatBox" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingBottom="5dp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hi All, Who wants to play match todaysdsdsdsdsdsdsdmultipletodaysdsdsdsdsdsdsdmultiple.\nmultiline\nmultiline\nmultiline\nmultiline\nmultiline\nmultiline\nmultiline"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:id="@+id/chatContentTextBox"
            android:layout_weight="0.80"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:text="21:30"
            android:textSize="5sp"
            android:id="@+id/chattimestamp"
            android:gravity="end"
            android:textColor="@color/black"
            android:layout_weight="0.20"
            android:layout_gravity="bottom|right"
            />
    </LinearLayout>
<!--</LinearLayout>-->
</merge>
